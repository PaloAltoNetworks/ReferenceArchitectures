{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {    
    "vmName": {
       "type": "string",
       "metadata": {
          "description": "Name of VM-Series FW in the Azure portal"
       },
       "defaultValue": "ARA-VMFW1"
    },
    "storageAccountName": {
      "type": "string",
      "metadata": {
        "description": "Name of the existing storage account used to store the VM's disks"
      }
    },
    "storageAccountExistingRG": {
       "type": "string",
       "defaultValue" : "",
       "metadata": {
          "description": "Storage Account's Resource Group location."
       }
    },
    "fwAvSet": {
       "type": "string",
       "metadata": {
          "description": "Availability Set name for Firewalls"
       },
       "defaultValue": "ARAFW-AS"
    },
    "vmSize": {
       "type": "string",
       "allowedValues": [
          "Standard_D3",
          "Standard_D4",
          "Standard_D3_v2",
          "Standard_D4_v2",
          "Standard_A4",
          "Standard_DS3_v2",
          "Standard_DS4_v2"
       ],
       "metadata": {
          "description": "Azure VM size for VM-Series"
       },
       "defaultValue": "Standard_D3_v2"
    },
    "virtualNetworkName": { 
      "type": "string",
      "metadata": {
        "description": "Name of the Virtual Network (VNET)"
      },
      "defaultValue": "AzureRA-VNet"
    },
    "virtualNetworkAddressPrefix": {
      "type": "string",
      "defaultValue": "10.110.0.0/16",
      "metadata": {
        "description": "Virtual network address CIDR"
      }
    },
    "virtualNetworkExistingRGName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Name of resource group of existing VNET (if applicable)"
      }
    },
    "subnet0Name": {
      "type": "string",
      "defaultValue": "Management",
      "metadata": {
        "description": "Subnet for Management"
      }
    },
    "subnet1Name": {
      "type": "string",
      "defaultValue": "Public",
      "metadata": {
        "description": "Public Subnet"
      }
    },
    "subnet2Name": {
      "type": "string",
      "defaultValue": "Private",
      "metadata": {
        "description": "Private Subnet"
      }
    },
    "subnet0Prefix": {
      "type": "string",
      "defaultValue": "10.110.255.0/24",
      "metadata": {
        "description": "Management subnet CIDR"
      }
    },
    "subnet1Prefix": {
      "type": "string",
      "defaultValue": "10.110.129.0/24",
      "metadata": {
        "description": "Public subnet CIDR"
      }
    },
    "subnet2Prefix": {
      "type": "string",
      "defaultValue": "10.110.0.0/24",
      "metadata": {
        "description": "Private subnet CIDR"
      }
    },
    "subnet0StartAddress": {
      "type": "string",
      "defaultValue": "10.110.255.4",
      "metadata": {
        "description": "Management subnet static address"
      }
    },
    "subnet1StartAddress": {
      "type": "string",
      "defaultValue": "10.110.129.4",
      "metadata": {
        "description": "Public subnet start address"
      }
    },
    "subnet2StartAddress": {
      "type": "string",
      "defaultValue": "10.110.0.4",
      "metadata": {
        "description": "Private subnet start address"
      }
    },
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Username of the administrator account of VM-Series"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "Password for the administrator account of VM-Series"
      }
    },
    "publicIPAddressName": {
      "type": "string",
      "metadata": {
        "description": "Name of ARA-VMFW1 Management Public Address"
      }
    },
    "imageVersion": {
      "type": "string",
      "metadata": {
        "description": "PAN OS Version"
      }
    },
    "imageSku": {
      "type": "string",
      "metadata": {
        "description": "Firewall License Model"
      }
    },
    "nsgName": {
      "type": "string",
      "defaultValue": "DefaultNSG",
      "metadata": {
        "description": "Name of existing Network Security Group for MGMT FW interface"
      }
    }
        
  }
}  
